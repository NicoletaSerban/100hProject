<%- include('partials/header') -%>
<div class="container main">
  <div class="row">
    <!-- start div for page buttons -->
    <div class="col-7 mx-auto">
      <!-- start of buttons -->
      <div>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active text-peach fw-semibold" aria-current="page" href="/account"
              >My profile</a
            >
          </li>
          <!-- <li class="nav-item">
            <a class="nav-link" href="/account/createAvatar">Avatar</a>
          </li> -->
          <li class="nav-item">
            <a class="nav-link text-peach fw-semibold" href="/account/createPost">Create Post</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-peach fw-semibold" href="/">Main Page</a>
          </li>
        </ul>
      </div>
      <!-- end buttons -->

      <!-- start myprofile page -->
      <div class="card pt-5" style="background-image:url(/imgs/back2.png)" >
        <div class="card-img-top row" alt="...">
          <img class="rounded d-block img-fluid " id="avatar" src="https://avatars.dicebear.com/api/big-smile/:seed.png" >
        </div>
        
        <div class="card-body text-center">
          <h5 class="card-title text-peach">Welcome</strong> <%= user.userName %></h5>
          <p class="card-text">
            <ul class="list-unstyled text-light">
            <li><strong>Email</strong>: <%= user.email %></li>
            <li><strong>Role</strong>: <%= user.role %></li>
            <li><strong>My Rating</strong>: <%= user.rating %></li>
            <li><strong>Report</strong>: <%= user.reported %></li>
          </ul>
        </p>
        </div>
        <!-- end div myprofile -->
      </div>
      <!-- end div for page buttons-->
    </div>

    <!-- my post starts -->
      <h2 class="text-center pt-4 text-powder">My posts</h2>
      <div class="col-5 section-bg">
        <ul class="row list-unstyled text-center" >
          <% for(post of posts) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/animal/<%=post._id%>" class="text-decoration-none">
              <img class="img-fluid" src="<%=post.image%>" />
              <ul class="list-unstyled link-secondary text-light">
                <li><strong>Name</strong>: <%= post.name %></li>
                <li><strong>Posted on</strong>: <%= post.postDate.toLocaleString() %></li>
              </ul>
            </a>
            <div class="d-flex justify-content-between">
              <form
                action="/account/deletePost/<%= post.id %>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-danger btn-sm text-light" type="submit">Delete</button>
              </form>
               <button type="button" class="btn btn-minty btn-sm text-light" type="submit"><a  href="/account/editPost/<%= post.id %>"
                  class="text-decoration-none text-powder"
                >Edit</a></button>
            </div>
          </li>
          <% } %>
        </ul>
        <!-- end div my posts -->
      </div>

      <!-- end div row -->
    </div>
    <!-- end div container -->
  </div>
 
</div>
<%- include('partials/footer') -%>
