<%- include('partials/header') -%>

<div class="container main">
  <div class="row">
    <h2 class="text-center pt-4 text-peach"><%=animal.name%></h2>
    <div class="col-5">
      <img class="img-fluid pb-3" src="<%=animal.image%>" />

      <div class="d-flex gap-2 col-6 mx-auto pb-3">
        <!-- to appear only btn  -->
        <% if(animal.forAdoption === 'Yes'){ %>
        <button type="button" class="btn-sm btn btn-info text-light">
          Adopt me
        </button>

        <% } %> <% if(animal.forFoster === 'Yes'){ %>
        <button type="button" class="btn-sm btn btn-info text-light">
          Foster me
        </button>
        <% } %>
        <!-- end of btn -->
      </div>
      <!-- end div pic -->
    </div>

    <div class="col-6">
      <ul class="lh-sm lh-lg fs-5 row list-unstyled pt-5 text-light">
        <li>Age: <%=animal.age%></li>
        <li>Type: <%=animal.type%></li>
        <li>Special Needs: <%=animal.specialNeeds%></li>
        <li>Location: <%=animal.location%></li>
        <li>Posted date: <%=animal.postDate.toLocaleString()%></li>
        <li>Posted by:  <a href="/user/<%=animal.userId%>"> <%=animal.createdByName%><a></li>
      </ul>
      
    </div>
    <!-- end of div row -->
  </div>

  <div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="card col p-2 mb-2 auto main">
        <div class="card-body">
          <h3 class="text-peach">Description:</h3>
          <p class="lead lh-base text-light"><%=animal.description%></p>
        </div>
        <!-- end div description -->
      </div>

      <div class="card col p-2 mb-2 auto main">
        <div class="card-body">
          <h3 class="text-peach">Likes:</h3>
          <p class="lead lh-base text-light"><%=animal.likes%></p>
          <h3 class="text-peach">Dislikes:</h3>
          <p class="lh-base text-light"><%=animal.dislikes%></p>
        </div>

        <!-- end div likes -->
      </div>
    </div>
  </div>
 
  <% if(user.id == animal.userId){%>
  <form
    action="/animal/deleteAnimal/<%=animal.id%>?_method=DELETE"
    method="POST"
    class="col-3"
  >
    <button class="btn btn-danger btn-sm text-light" type="submit">
      Delete
    </button>
  </form>

  <button class="btn btn-powder btn-sm text-light" type="submit">
    <a href="/animal/editPost/<%=animal.id%>" class="col-3">Edit </a>
  </button>
  
  <%}%>
  <!-- end of div container -->
</div>

<%- include('partials/footer') -%>
